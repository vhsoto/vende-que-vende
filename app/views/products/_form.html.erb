<%= form_with model: @product do |form| %>
  <% @product.errors.full_messages.each do |error| %>
    <%= error %><br>
  <% end %>
  <br>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <div>
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>